modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Congress Data Downloader"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DynamoDB Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Health Check"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Committee Data Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Congress API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "Congress Data Downloader"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python congress_downloader.py --mode refresh --start-date 2024-01-20 --end-date 2024-01-20"

[[workflows.workflow]]
name = "DynamoDB Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_dynamo.py --verbose && python test_committee_data.py --verbose"

[[workflows.workflow]]
name = "Health Check"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python health_check.py"

[[workflows.workflow]]
name = "Committee Data Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_committee_data.py --verbose"

[[workflows.workflow]]
name = "Test Congress API"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_committee_data.py --verbose"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python congress_downloader.py --mode refresh --start-date 2024-01-20 --end-date 2024-01-20"]

[[ports]]
localPort = 5000
externalPort = 80
